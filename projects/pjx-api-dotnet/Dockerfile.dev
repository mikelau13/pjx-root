FROM mcr.microsoft.com/dotnet/sdk:3.1

WORKDIR /app

# Copy project files
COPY *.sln ./
COPY src/ ./src/

# Restore dependencies
RUN dotnet restore

# Build the project
RUN dotnet build

# Expose port
EXPOSE 80

# Start development server with watch
CMD ["dotnet", "watch", "run", "--project", "src/Pjx_Api/pjx-api-dotnet.csproj", "--urls", "http://0.0.0.0:80"]